'This code need to be pasted in after the "'Code" comment in base.sb
While "true"
    Motor.Start(MOTOR_MOVEMENT, 25)
    If Sensor.ReadRawValue(COLOR_R, 0) = COLORS_BLACK And Sensor.ReadRawValue(COLOR_L, 0) = COLORS_WHITE Then
      Motor.Stop(MOTOR_MOVEMENT, "false")
      Motor.Move(MOTOR_LEFT, 50, 200, "true")
      Motor.Move(MOTOR_RIGHT, -50, 200, "true")
    ElseIf Sensor.ReadRawValue(COLOR_L, 0) = COLORS_BLACK And Sensor.ReadRawValue(COLOR_R, 0) = COLORS_WHITE Then
      Motor.Stop(MOTOR_MOVEMENT, "false")
      Motor.Move(MOTOR_RIGHT, 50, 200, "true")
      Motor.Move(MOTOR_LEFT, -50, 200, "true")
    ElseIf Sensor.ReadRawValue(COLOR_R, 0) = COLORS_BLACK And Sensor.ReadRawValue(COLOR_R, 0) = COLORS_BLACK Then
      Motor.Stop(MOTOR_MOVEMENT, "true")
    EndIf
EndWhile
